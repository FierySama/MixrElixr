{
  "name": "MixrElixr",
  "description": "Enhances the Mixer.com experience by providing options, tweaks, and new features.",
  "version": null,
  "manifest_version": 2,
  "icons": {
    "16": "/resources/images/elixr-light-16.png",
    "48": "/resources/images/elixr-light-48.png",
    "128": "/resources/images/elixr-light-128.png"
  },
  "browser_action": {
    "default_title": "MixrElixr",
    "default_icon": "/resources/images/elixr-light-16.png",
    "default_popup": "popup/popup.html"
  },
  "background": {
    "scripts": [
        "/background/background.js"
    ],
    "persistent": true
  },
  "web_accessible_resources": [
    "resources/images/*"
  ],
  "content_scripts": [
    {
        "matches": [
            "*://mixer.com/*"
        ],
        "exclude_globs": [
            "*/api/*"
        ],
        "css": [
            "/injected-content/injected-content.css"
        ],
        "js": [
            "/injected-content/injected-content.js"
        ]
    }
  ],
  "permissions": [
    "storage",
    "cookies",
    "notifications",
    "background",
    "*://mixer.com/*",
    "*://crowbartools.com/*",
    "*://*.mixrelixr.com/*"
  ],
  "applications": {
    "gecko": {
      "id": "mixrelixr@gmail.com",
      "strict_min_version": "53.0"
    }
  }
}
